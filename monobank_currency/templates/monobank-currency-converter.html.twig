<div class="bg-gray-50 dark:bg-gray-900 min-h-screen p-4">
  <div class="w-full max-w-6xl mx-auto">
    {# Header #}
    <div class="flex justify-center gap-4 mb-12 flex-wrap">
      <div class="bg-white dark:bg-gray-800 rounded-full px-6 py-3 shadow-sm flex items-center gap-2">
        <svg class="w-5 h-5 text-gray-900 dark:text-gray-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <circle cx="12" cy="12" r="10" stroke-width="2"/>
          <polyline points="12 6 12 12 16 14" stroke-width="2"/>
        </svg>
        <span class="font-medium text-gray-800 dark:text-gray-200">{{ 'Currency rates as of'|t }} {{ last_update }}</span>
      </div>
    </div>

    {# Converter Card #}
    <div class="mb-8">
      {{ converter_form }}
    </div>

    {# Rates Table Section #}
    <div>
      <h2 id="rates-table-header" class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">{{ 'Exchange Rates (UAH)'|t }}</h2>

      {# Search Box #}
      <div class="mb-4">
        <input type="text" id="currency-search" placeholder="{{ 'Search currencies...'|t }}"
               class="w-full max-w-md px-4 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400">
      </div>

      {# Rates Table #}
      <div class="overflow-x-auto rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800">
        <table class="w-full">
          <thead class="bg-gray-50 dark:bg-gray-700 border-b-2 border-gray-200 dark:border-gray-600">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 dark:text-gray-300 uppercase tracking-wider">{{ 'Currency'|t }}</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 dark:text-gray-300 uppercase tracking-wider">{{ 'Rate'|t }}</th>
            </tr>
          </thead>
          <tbody id="rates-table-body">
            {% for row in rates_table %}
              <tr class="border-b border-gray-100 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 transition rate-row" data-currency-code="{{ row.code }}">
                <td class="px-6 py-4">
                  <div class="flex items-center gap-3">
                    <img src="{{ row.flag }}" alt="{{ row.currency_code }}" class="w-6 h-5 rounded object-cover" loading="lazy">
                    <span class="font-semibold text-gray-900 dark:text-gray-100">{{ row.currency_code }}</span>
                    <span class="text-gray-500 dark:text-gray-400 currency-name">{{ row.currency_name|t }}</span>
                  </div>
                </td>
                <td class="px-6 py-4 font-mono font-medium text-gray-900 dark:text-gray-100">{{ row.buy }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
