{% set from_value = form.amount['#value']|default(1000) %}
{% set to_value = form.to_currency['#value']|default(980) %}
{% set from_currency = form.from_currency['#value']|default(840) %}

<div class="flex flex-col lg:flex-row lg:items-center lg:gap-8">
  {# Amount Section #}
  <div class="mb-6 lg:mb-0 lg:flex-1">
    <label class="text-gray-500 text-sm mb-2 block">{{ 'Amount'|t }}</label>
    <div class="flex items-center justify-between gap-4">
      {{ form.amount|without('title') }}
      {{ form.from_currency|without('title') }}
    </div>
  </div>

  {# Swap Button with Divider #}
  <div class="relative flex justify-center my-6 lg:my-0">
    <div class="absolute inset-0 flex items-center lg:hidden">
      <div class="w-full border-t border-gray-200"></div>
    </div>
    <div class="hidden lg:flex lg:h-24">
      <div class="border-l border-gray-200"></div>
    </div>
    <button type="button" id="swap-currencies" class="relative bg-white rounded-full p-4 shadow-md hover:shadow-lg transition lg:absolute lg:top-1/2 lg:left-1/2 lg:transform lg:-translate-x-1/2 lg:-translate-y-1/2">
      <svg class="w-6 h-6 text-gray-600 lg:transform lg:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <polyline points="17 11 12 6 7 11" stroke-width="2"/>
        <polyline points="7 13 12 18 17 13" stroke-width="2"/>
      </svg>
    </button>
  </div>

  {# Converted Section #}
  <div class="mb-6 lg:mb-0 lg:flex-1">
    <label class="text-gray-500 text-sm mb-2 block">{{ 'Converted to'|t }}</label>
    <div class="flex items-center justify-between gap-4">
      <div id="converted-amount" class="text-5xl font-bold text-gray-900">0.00</div>
      {{ form.to_currency|without('title') }}
    </div>
  </div>
</div>

<div class="hidden">
  {{ form.mode }}
  {{ form.form_build_id }}
  {{ form.form_token }}
  {{ form.form_id }}
</div>
