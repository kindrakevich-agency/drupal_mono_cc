<div class="flex flex-col lg:flex-row lg:items-center lg:gap-12">
  {# Amount Section #}
  <div class="mb-6 lg:mb-0 lg:flex-1">
    <label class="text-gray-500 text-sm mb-2 block">{{ 'Amount'|t }}</label>
    <div class="flex items-center justify-between gap-4">
      <input type="number"
             name="amount"
             value="1000"
             class="text-3xl font-bold text-gray-900 outline-none w-full max-w-[200px] border-0 p-0 bg-transparent"
             id="currency-amount"
             step="0.01"
             min="0" />
      <div class="flex items-center gap-2 flex-shrink-0">
        <img id="from-flag" src="" alt="" class="w-6 h-6" />
        <div class="relative">
          <select name="from_currency"
                  id="from-currency-select"
                  class="appearance-none bg-gray-50 rounded-full pl-3 pr-7 py-1.5 text-sm font-semibold text-gray-900 cursor-pointer hover:bg-gray-100 transition outline-none w-[85px] border-0"
                  style="background-image: none;">
            {% for code, label in form.from_currency['#options'] %}
              <option value="{{ code }}" {% if code == 840 %}selected{% endif %}>{{ label }}</option>
            {% endfor %}
          </select>
          <div class="pointer-events-none absolute inset-y-0 right-2 flex items-center">
            <svg class="w-3 h-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <polyline points="6 9 12 15 18 9" stroke-width="2"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>

  {# Swap Button with Divider #}
  <div class="relative flex justify-center my-6 lg:my-0">
    <div class="absolute inset-0 flex items-center lg:hidden">
      <div class="w-full border-t border-gray-200"></div>
    </div>
    <div class="hidden lg:flex lg:h-24">
      <div class="border-l border-gray-200"></div>
    </div>
    <button type="button" id="swap-currencies" class="relative bg-white rounded-full p-4 shadow-md hover:shadow-lg transition lg:absolute lg:top-1/2 lg:left-1/2 lg:transform lg:-translate-x-1/2 lg:-translate-y-1/2">
      <svg class="w-6 h-6 text-gray-600 lg:transform lg:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <polyline points="17 11 12 6 7 11" stroke-width="2"/>
        <polyline points="7 13 12 18 17 13" stroke-width="2"/>
      </svg>
    </button>
  </div>

  {# Converted Section #}
  <div class="mb-6 lg:mb-0 lg:flex-1">
    <label class="text-gray-500 text-sm mb-2 block">{{ 'Converted to'|t }}</label>
    <div class="flex items-center justify-between gap-4">
      <div class="flex items-center gap-2">
        <div id="converted-amount" class="text-3xl font-bold text-gray-900">0.00</div>
        <button type="button" id="copy-button" class="px-3 py-1 text-xs font-medium text-gray-700 bg-gray-100 rounded-full hover:bg-gray-200 transition">
          {{ 'Copy'|t }}
        </button>
      </div>
      <div class="flex items-center gap-2 flex-shrink-0">
        <img id="to-flag" src="" alt="" class="w-6 h-6" />
        <div class="relative">
          <select name="to_currency"
                  id="to-currency-select"
                  class="appearance-none bg-gray-50 rounded-full pl-3 pr-7 py-1.5 text-sm font-semibold text-gray-900 cursor-pointer hover:bg-gray-100 transition outline-none w-[85px] border-0"
                  style="background-image: none;">
            {% for code, label in form.to_currency['#options'] %}
              <option value="{{ code }}" {% if code == 980 %}selected{% endif %}>{{ label }}</option>
            {% endfor %}
          </select>
          <div class="pointer-events-none absolute inset-y-0 right-2 flex items-center">
            <svg class="w-3 h-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <polyline points="6 9 12 15 18 9" stroke-width="2"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="hidden">
  {{ form.form_build_id }}
  {{ form.form_token }}
  {{ form.form_id }}
</div>
